{
  "version": "1.0",
  "$schema": "../deeployer.schema.json",
  "containers": {
      "mysql": {
        "image": "mysql:8",
        "volumes": {
          "data": {
            "diskSpace": "1G",
            "mountPath": "/var/lib/mysql"
          },
          "mysql-conf": {
            "diskSpace": "10M",
            "mountPath": "/etc/mysql"
          }
        }
      }
    }
  }
